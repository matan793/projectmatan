            <Viewbox Grid.Row="13" Grid.Column="2" Grid.ColumnSpan="12" Grid.RowSpan="10">
            <TextBlock  FontSize="39" Text="enter your email:" VerticalAlignment="Center" FontFamily="Space Invaders"/>
            </Viewbox>
            <Viewbox Grid.Row="16" Grid.Column="15" Grid.ColumnSpan="12" Grid.RowSpan="4" >
                <TextBox FontSize="39" FontFamily="Space Invaders" Name="emailbox" Width="251" />
            </Viewbox>
            <Viewbox Grid.Row="20" Grid.Column="15" Grid.ColumnSpan="10" Grid.RowSpan="3">
            <TextBlock  Text="" Grid.ColumnSpan="2" Foreground="Red"  x:Name="emailerr" VerticalAlignment="Bottom" FontSize="50" HorizontalAlignment="Center" />
            </Viewbox>
            <Viewbox Grid.Row="30" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="10" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Button x:Name="backbtn"
                PointerEntered="TextBlock_PointerEntered"
                PointerExited="TextBlock_PointerExited"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="back" 
                BorderBrush="Yellow"
                Foreground="Yellow"
                Click="backbtn_Click"
                FontSize="40" 
                RequestedTheme="Light" FontFamily="Fonts/space_invaders.ttf#Space Invaders" Background="#7F000000"/>
            </Viewbox>
            <Viewbox Grid.Row="31" Grid.Column="35" Grid.ColumnSpan="5" Grid.RowSpan="7"  VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button x:Name="continuebtn"
                Grid.Row="2"
                Grid.Column="1"
                PointerEntered="TextBlock_PointerEntered"
                PointerExited="TextBlock_PointerExited"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="continue" 
                BorderBrush="Yellow"
                Foreground="Yellow"
                Click="continuebtn_Click"
                FontSize="40" 
                HorizontalAlignment="Right"
                RequestedTheme="Light" FontFamily="Fonts/space_invaders.ttf#Space Invaders" Background="#7F000000"/>
            </Viewbox>
        </Grid>
        <Grid  Grid.Column="7" Grid.Row="5" Grid.ColumnSpan="25" Grid.RowSpan="25" x:Name="verifygrid"  Visibility="Collapsed"  Background="Yellow">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="95*"></ColumnDefinition>
                <ColumnDefinition Width="63*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.ColumnSpan="2" VerticalAlignment="Top">
            <TextBlock  FontSize="39" Text="a verification code was sent to your email" HorizontalAlignment="Left" FontFamily="Space Invaders" />
            </Viewbox>
            <Viewbox Grid.Row="1">
            <TextBlock  FontSize="35" Text="enter the verification coede:" VerticalAlignment="Center" FontFamily="Space Invaders" Height="47"/>
            </Viewbox>
            <Viewbox  Grid.Column="1" Grid.Row="1" >
            <TextBox HorizontalAlignment="Center" Width="251" MaxLength="8" FontSize="39" FontFamily="Space Invaders" Name="verifybox"  TextChanged="verifybox_TextChanged" />
            </Viewbox>
            <Button x:Name="backbtn2"
