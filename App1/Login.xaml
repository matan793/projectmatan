        <Grid.Background>
            <ImageBrush ImageSource="Assets/spacedust1.jpg"></ImageBrush>
        </Grid.Background>
        <Viewbox Grid.Column="6" Grid.Row="12" Grid.ColumnSpan="10" Grid.RowSpan="5">
        <TextBlock Foreground="Yellow" VerticalAlignment="Top" FontFamily="Fonts/space_invaders.ttf#space invaders" Text="username:"  FontSize="40" />
        </Viewbox>
        <Viewbox Grid.Column="20" Grid.Row="12" Grid.ColumnSpan="10" Grid.RowSpan="4" Stretch="Uniform" >
            <TextBox Name="username" FontSize="40" VerticalAlignment="Stretch"  Background="#66ADA0A0" TextChanged="username_TextChanged" Width="251"/>
        </Viewbox>
        <Viewbox Grid.Column="6" Grid.Row="19" Grid.ColumnSpan="10" Grid.RowSpan="5">
        <TextBlock Foreground="Yellow"  FontFamily="Fonts/space_invaders.ttf#space invaders" Text="password:" FontSize="40"/>
        </Viewbox>
        <Viewbox Grid.Column="20" Grid.Row="19" Grid.ColumnSpan="10" Grid.RowSpan="4" Stretch="Uniform" >
            <PasswordBox  Name="password" FontSize="40" Background="#66ADA0A0"  PasswordChanged="password_PasswordChanged" Width="251"/>
        </Viewbox>
        <Viewbox Grid.Row="25" Grid.Column="13" Grid.ColumnSpan="15" Grid.RowSpan="2">
        <TextBlock x:Name="fpassbtn"  PointerExited="TextBlock_PointerExited" PointerEntered="TextBlock_PointerEntered" Tapped="ForgotPass_Tapped" Foreground="Yellow" FontSize="40" Text="forgot your passwod? click here to change it" />
        </Viewbox>
        <Viewbox Grid.Row="30" Grid.Column="16" Grid.RowSpan="5" Grid.ColumnSpan="7">
        <Button x:Name="loginbtn"
                PointerEntered="TextBlock_PointerEntered"
                PointerExited="TextBlock_PointerExited"
                IsEnabled="True"
                VerticalContentAlignment="Bottom"
                HorizontalContentAlignment="Center"
                Content="Login" 
                BorderBrush="Yellow"
                Foreground="Yellow"
                FontSize="40" 
                RequestedTheme="Light" FontFamily="Fonts/space_invaders.ttf#Space Invaders" Click="LoginBtn_Click" />
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="36" Grid.ColumnSpan="3" Grid.RowSpan="3">
        <Button x:Name="Quitbtn" 
                Content="quit" 
                BorderBrush="Yellow"
                Foreground="Yellow"
                FontFamily="Fonts/space_invaders.ttf#Space Invaders" Click="Quitbtn_Click"/>
        </Viewbox>
        <Viewbox Grid.Column="13" Grid.Row="27" Grid.ColumnSpan="15">
        <TextBlock PointerExited="TextBlock_PointerExited" PointerEntered="TextBlock_PointerEntered" Tapped="TextBlock_Tapped" Foreground="Yellow" FontSize="40" Text="Don't have a user? click here to create one" />
        </Viewbox>
        <Viewbox Grid.Row="23" Grid.Column="12" Grid.ColumnSpan="15" >
        <TextBlock x:Name="logerr" Foreground="Red" FontSize="30" Visibility="Collapsed" Text="Username or password are not currect"/>
        </Viewbox>
      
            <Grid Grid.Column="7" Grid.Row="5" Grid.ColumnSpan="25" Grid.RowSpan="25" x:Name="emailgrid"  Visibility="Collapsed" Background="Yellow" >
